<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_student_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.literacyapp.authentication.fallback.StudentSelectionActivity"
    tools:showIn="@layout/activity_student_selection">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <android.support.v7.widget.GridLayout
            android:id="@+id/studentSelectionGridLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:columnCount="@integer/gridlayout_column_count"
            app:useDefaultMargins="true">

            <!-- Programmatically add content_student_selection_view.xml -->
        </android.support.v7.widget.GridLayout>
    </ScrollView>
</RelativeLayout>
