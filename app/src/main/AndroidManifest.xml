<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.literacyapp"
    android:versionCode="1001006"
    android:versionName="1.1.6-SNAPSHOT">

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- https://developer.android.com/guide/topics/graphics/opengl.html -->
    <!-- OpenGL ES 3.1 - supported by Android 5.0 (API level 21) and higher -->
    <uses-feature android:glEsVersion="0x00030001" android:required="true" />

    <application
        android:name=".LiteracyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="edu.cmu.pocketsphinx.demo.PocketSphinxActivity" />
        <activity android:name=".CategoryActivity" />

        <receiver android:name=".BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity android:name=".content.number.NumberListActivity" />
        <activity android:name=".content.word.WordListActivity" />
    </application>
</manifest>